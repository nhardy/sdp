@import '~app/assets/stylus'


$infoWidth = 140px
$padding = 24px

.root
  background: $textColor
  color: $footnoteColor
  line-height: 1.15

.column
  composes: column from 'app/assets/stylus/common.styl'

.wrapper
  display: flex
  flex-direction: row
  flex-wrap: wrap
  border-top: 1px solid $borderColor
  border-left: 1px solid $borderColor
  margin-right: -1px

.info
  flex: 1 0 auto
  width: $infoWidth
  padding: $padding
  border-bottom: 1px solid $borderColor
  border-right: 1px solid $borderColor

  li
    &:not(:last-child)
      margin-bottom: .25em

    & > a
      text-decoration: none
      font-weight: 600
      color: $brightLinkColor

      &:hover
        color: $brightLinkHoverColor

.double
  flex: 2 0 auto
  width: (2 * $infoWidth)

.full
  flex-basis: 100%

.secondaryInfo
  display: flex
  justify-content: space-between

  div
    &:not(:last-child)
      margin-right: $padding

    &:not(.social)
      +upTo($med)
        display: none

.heading
  text-transform: uppercase
  font-weight: 600
  font-size: 20px
  color: $backgroundColor
  margin-bottom: 16px

.lesserHeading
  font-weight: 600
  font-size: 16px
  color: $backgroundColor
  margin-bottom: 8px

.headingLink
  text-decoration: none

.social
  flex: 2 0 auto
  display: flex
  justify-content: space-between
  align-items: center

  a:not(:last-child)
    margin-right: 8px

.socialLink
  color: $backgroundColor

  &:hover
    color: $brightLinkColor

.link
  text-decoration: none
  font-weight: 600
  color: $brightLinkColor

  &:hover
    color: $brightLinkHoverColor

.github
  composes: socialLink
  margin-left: $padding

.footnote
  display: flex
  justify-content: space-between
