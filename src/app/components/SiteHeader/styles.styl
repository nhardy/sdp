@import '~app/assets/stylus'


.root
  background: $themeColor

.column
  composes: column from 'app/assets/stylus/common.styl'

.navBar
  display: flex
  flex-direction: row
  // padding-top: var(--padding)
  // padding-bottom: var(--padding)
  height: 60px
  font-size: 20px

.nav
  flex: 1

  +upTo($med)
    display: none

.aside
  position: fixed
  z-index: $zIndexSidebar
  top: 0
  left: 0
  width: 250px
  height: 100%
  padding: 8px
  background: $textColor
  color: $backgroundColor
  display: flex
  flex-direction: column
  transform: translateX(0%)
  transition: transform 250ms ease-in-out

.close
  cursor: pointer
  display: block
  text-align: right

.checkbox
  display: none

.checkbox:not(:checked) + .aside
  transform: translateX(-100%)

.hamburger
  cursor: pointer
  margin: auto var(--gutter) auto 0
  z-index: $zIndexHamburger

+from($med)
  .aside
  .hamburger
    display: none

.heading
.tagline
  display: block

.sticky
  background: $highlightColor
  color: $backgroundColor
  transition: background 250ms ease-in-out

.isSticky
  background: rgba($highlightColor, 0.95)

.siteName
  & .isSticky
    color: $backgroundColor

  font-size: 28px
  font-weight: 600
  align-self: center

  +upTo($med)
    position: absolute
    width: 100%
    text-align: center

  a
    text-decoration: none

.helps
  color: $helpsColor

.bookingSystem
  color: $detailColor
  font-weight: 500

  +upTo($sml)
    display: none
