@import '~app/assets/stylus'


.root
  border: 1px solid $borderColor
  border-radius: 4px
  propertyPadding('padding')

  &:not(:last-child)
    margin-bottom: 16px

.question
  display: flex
  flex-direction: row
  align-items: flex-start
  width: 100%

.text
  flex: 1 1 auto
  display: inline-block
  propertyGutter('margin-right')
  color: $highlightColor
  font-size: 20px
  font-weight: 600

.button
  flex: 0 0 auto

.answer
  margin-top: 0
  height: 0
  overflow: hidden
  padding-bottom: .25em
  opacity: 0
  z-index: -1
  transition: height 250ms ease-in-out, opacity 250ms ease-in-out, margin-top 250ms ease-in-out

  &::before
    content: '> '

  &.shown
    margin-top: 8px
    height: auto
    opacity: 1
    z-index: initial
